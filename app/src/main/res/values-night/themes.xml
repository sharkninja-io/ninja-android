<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NinjaConnectedKitchen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ninja_green</item>
        <item name="colorPrimaryVariant">@color/theme_background</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/ninja_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/gotham_book_normal</item>
        <item name="materialButtonStyle">@style/Ninja.ButtonStyle</item>
        <item name="materialButtonOutlinedStyle">@style/Ninja.ButtonStyleSecondary</item>
<!--        <item name="checkboxStyle">@style/Ninja.Checkbox</item>-->
        <item name="bottomSheetDialogTheme">@style/Ninja.BottomSheetDialog</item>

    </style>
</resources>