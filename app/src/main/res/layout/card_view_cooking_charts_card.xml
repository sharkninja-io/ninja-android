<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:background="@color/white_6F">

        <ImageView
            android:id="@+id/imageResource"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cookingMethod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageResource"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="@string/charts_cook_method"
            android:textSize="12sp"
            android:letterSpacing=".04"
            android:textColor="@color/ninja_green"
            android:lineHeight="16sp"
            android:fontFamily="@font/gotham_book_bold"
            android:textFontWeight="700" />

        <TextView
            android:id="@+id/recipeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cookingMethod"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/charts_recipe_name"
            android:autoSizeTextType="uniform"
            android:textSize="12sp"
            android:lineHeight="14.4sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/gotham_book_medium"
            android:textFontWeight="400"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>