<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sections.home.fragments.BluetoothFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Bluetooth Pairing Test" />

    <Button
        android:id="@+id/scan_devices_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/ninja_green"
        android:text="Scan for Devices" />

    <Button
        android:id="@+id/enable_notify_descriptor_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/scan_devices_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Enable Descriptor Notify" />

    <Button
        android:id="@+id/enable_notify_characteristic_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/ninja_green"
        android:text="Enable Notify Characteristic"
        app:layout_constraintBottom_toTopOf="@id/enable_notify_descriptor_button"/>

    <Button
        android:id="@+id/disconnect_device_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/enable_notify_characteristic_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Disconnect Device" />
    <Button
        android:id="@+id/send_wifi_scan_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/scan_devices_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Send Wifi Scan Request" />

    <Button
        android:id="@+id/send_wifi_scan_result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/send_wifi_scan_request_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Send Wifi Scan Result" />

    <Button
        android:id="@+id/read_wifi_scan_result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/send_wifi_scan_result_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Read Wifi Scan Result" />

    <Button
        android:id="@+id/send_wifi_join_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/read_wifi_scan_result_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Send Wifi Join Request" />

    <Button
        android:id="@+id/to_wifi_selection_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/disconnect_device_button"
        android:backgroundTint="@color/ninja_green"
        android:text="To Wifi Selection List" />

    <Button
        android:id="@+id/grill_info_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toTopOf="@id/to_wifi_selection_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Send Grill Info Request" />

</androidx.constraintlayout.widget.ConstraintLayout>