<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cookTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/cook_time"
        android:textColor="@color/black1"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="700"
        android:letterSpacing=".04" />

    <CheckBox
        android:id="@+id/fifteenMinBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/cookTimeText"
        app:layout_constraintTop_toBottomOf="@+id/cookTimeText"
        android:layout_marginTop="16dp"
        android:buttonTint="@color/black1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/fifteenMinBox"
        app:layout_constraintBottom_toBottomOf="@+id/fifteenMinBox"
        app:layout_constraintLeft_toRightOf="@id/fifteenMinBox"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/charts_filters_time_less_15"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textColor="@color/black1" />

    <CheckBox
        android:id="@+id/sixtyToOneTwentyMinBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fifteenMinBox"
        app:layout_constraintBottom_toBottomOf="@id/fifteenMinBox"
        android:layout_marginRight="131dp"
        android:buttonTint="@color/black1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/sixtyToOneTwentyMinBox"
        app:layout_constraintBottom_toBottomOf="@+id/sixtyToOneTwentyMinBox"
        app:layout_constraintLeft_toRightOf="@+id/sixtyToOneTwentyMinBox"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/charts_filters_time_60_120"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textColor="@color/black1"/>

    <CheckBox
        android:id="@+id/fifteenToThirtyMinBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/fifteenMinBox"
        app:layout_constraintTop_toBottomOf="@+id/fifteenMinBox"
        android:layout_marginTop="16dp"
        android:layout_marginRight="131dp"
        android:buttonTint="@color/black1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/fifteenToThirtyMinBox"
        app:layout_constraintBottom_toBottomOf="@+id/fifteenToThirtyMinBox"
        app:layout_constraintLeft_toRightOf="@+id/fifteenToThirtyMinBox"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/charts_filters_time_15_30"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textColor="@color/black1"/>

    <CheckBox
        android:id="@+id/oneTwentyPlusBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/sixtyToOneTwentyMinBox"
        app:layout_constraintTop_toBottomOf="@+id/sixtyToOneTwentyMinBox"
        android:layout_marginTop="16dp"
        android:layout_marginRight="131dp"
        android:buttonTint="@color/black1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/oneTwentyPlusBox"
        app:layout_constraintBottom_toBottomOf="@+id/oneTwentyPlusBox"
        app:layout_constraintLeft_toRightOf="@+id/oneTwentyPlusBox"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/charts_filters_time_over_120"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textColor="@color/black1"/>

    <CheckBox
        android:id="@+id/thirtyToSixtyMinBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="@+id/fifteenToThirtyMinBox"
        app:layout_constraintTop_toBottomOf="@+id/fifteenToThirtyMinBox"
        android:layout_marginTop="16dp"
        android:layout_marginRight="131dp"
        android:buttonTint="@color/black1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/thirtyToSixtyMinBox"
        app:layout_constraintBottom_toBottomOf="@+id/thirtyToSixtyMinBox"
        app:layout_constraintLeft_toRightOf="@+id/thirtyToSixtyMinBox"
        android:layout_marginLeft="@dimen/margin_small"
        android:text="@string/charts_filters_time_30_60"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textColor="@color/black1"/>

    <View
        android:id="@+id/applyFiltersButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/thirtyToSixtyMinBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/rounded_edges_ninja_green_25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/applyFiltersButton"
        app:layout_constraintBottom_toBottomOf="@+id/applyFiltersButton"
        app:layout_constraintLeft_toLeftOf="@+id/applyFiltersButton"
        app:layout_constraintRight_toRightOf="@+id/applyFiltersButton"
        android:text="@string/apply"
        android:textColor="@color/white_8F"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="500"
        android:textAlignment="center"
        android:textSize="16sp"
        android:lineHeight="18sp"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/applyFiltersButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>