<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_edges_white_background">

    <TextView
        android:id="@+id/turn_on_grill_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:text="@string/turn_on_grill_plain"
        android:textColor="@color/black1"
        android:textSize="16dp"
        android:textFontWeight="500"
        android:fontFamily="@font/gotham_book_medium"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/press_start_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/turn_on_grill_text"
        android:layout_marginTop="8dp"
        android:text="@string/press_start_button"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textSize="24dp"
        android:textColor="@color/black1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"/>

    <TextView
        android:id="@+id/extension_cord_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/press_start_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gotham_book_medium"
        android:textSize="16sp"
        android:textColor="@color/darkest_grey"
        android:text="@string/press_rounded_start_button" />

    <View
        android:id="@+id/grill_image"
        android:layout_width="212dp"
        android:layout_height="131dp"
        android:background="@drawable/ic_outdoor_pro_grill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/extension_cord_text"
        android:layout_marginTop="41dp" />

    <ImageView
        android:id="@+id/got_it_button"
        android:layout_width="206dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/grill_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="44dp"
        android:background="@drawable/got_it_button_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/got_it_button"
        app:layout_constraintBottom_toBottomOf="@id/got_it_button"
        app:layout_constraintLeft_toLeftOf="@id/got_it_button"
        app:layout_constraintRight_toRightOf="@id/got_it_button"
        android:paddingBottom="4dp"
        android:text="@string/got_it"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textAlignment="center"
        android:lineHeight="48dp"
        android:textColor="@color/white_8F"
        android:textSize="16dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/got_it_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>