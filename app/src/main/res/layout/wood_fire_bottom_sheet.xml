<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tryWoodfire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:text="@string/woodfire_flavor"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:textColor="@color/black1"
        android:letterSpacing=".04"/>

    <TextView
        android:id="@+id/woodfireExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tryWoodfire"
        android:layout_marginTop="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:text="@string/woodfire_add_rich"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:lineHeight="14.4sp"
        android:textColor="@color/darkest_grey"/>

    <TextView
        android:id="@+id/woodfireTechBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/woodfireExtra"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:text="@string/woodfire_tech"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:letterSpacing=".04"
        android:textColor="@color/black1"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"/>

    <Switch
        android:id="@+id/woodfireToggle"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        app:layout_constraintTop_toTopOf="@+id/woodfireTechBanner"
        app:layout_constraintBottom_toBottomOf="@+id/woodfireTechBanner"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_large"
        android:track="@drawable/track_selector_woodfire"
        android:thumb="@drawable/thumb_selector_woodfire"/>
    
    <TextView
        android:id="@+id/explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginLeft="48dp"
        android:text="@string/woodfire_filtering_option"
        android:textColor="@color/darkest_grey"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textSize="12sp"
        android:lineHeight="14.4sp"
        app:layout_constraintTop_toBottomOf="@id/woodfireTechBanner"
        android:layout_marginTop="38dp"/>
    <ImageView
        android:layout_width="13.33dp"
        android:layout_height="13.33dp"
        app:layout_constraintTop_toTopOf="@+id/explanation"
        app:layout_constraintRight_toLeftOf="@+id/explanation"
        android:layout_marginRight="9.33dp"
        android:background="@drawable/ic_iconoir_warning_circled_outline"/>

    <View
        android:id="@+id/applyFiltersButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/explanation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/rounded_edges_ninja_green_25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/applyFiltersButton"
        app:layout_constraintBottom_toBottomOf="@+id/applyFiltersButton"
        app:layout_constraintLeft_toLeftOf="@+id/applyFiltersButton"
        app:layout_constraintRight_toRightOf="@+id/applyFiltersButton"
        android:text="@string/apply"
        android:textColor="@color/white_8F"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="500"
        android:textAlignment="center"
        android:textSize="16sp"
        android:lineHeight="18sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@+id/applyFiltersButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>