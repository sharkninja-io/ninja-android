<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sections.home.fragments.pairing.errors.BluetoothPersistentErrorFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bluetooth_persistent_error_image"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    
    <TextView
        android:id="@+id/oopss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/gotham_book_medium"
        android:textColor="@color/white_8F"
        android:lineHeight="48dp"
        android:textSize="48dp"
        android:textFontWeight="700"
        android:text="@string/oops_wifi_error"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oopss"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/gotham_book_medium"
        android:textColor="@color/white_8F"
        android:textFontWeight="400"
        android:textSize="16dp"
        android:lineHeight="20dp"
        android:text="@string/lets_try_wifi"/>

    <View
        android:id="@+id/button_next"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edges_black1_background"
        android:layout_marginBottom="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/connect_with_wifi"
        android:textColor="@color/white_8F"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="550"
        android:textSize="16dp"
        android:lineHeight="18dp"
        app:layout_constraintTop_toTopOf="@+id/button_next"
        app:layout_constraintBottom_toBottomOf="@+id/button_next"
        app:layout_constraintRight_toRightOf="@+id/button_next"
        app:layout_constraintLeft_toLeftOf="@+id/button_next"/>

</androidx.constraintlayout.widget.ConstraintLayout>