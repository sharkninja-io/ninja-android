<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sections.home.fragments.PairingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pairing Fragment" />

    <Button
        android:id="@+id/bluetooth_pairing_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/ninja_green"
        android:text="Bluetooth Pairing" />

    <Button
        android:id="@+id/wifi_pairing_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bluetooth_pairing_button"
        android:backgroundTint="@color/ninja_green"
        android:text="Wifi Pairing (disabled)" />


</androidx.constraintlayout.widget.ConstraintLayout>