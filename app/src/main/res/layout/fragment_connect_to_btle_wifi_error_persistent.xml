<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_large"
    android:layout_marginEnd="@dimen/margin_large"
    tools:context=".sections.home.fragments.pairing.errors.ConnectToBTLEWifiErrorPersistentFragment">

    <TextView
        android:id="@+id/grill_network_error_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:paddingTop="@dimen/element_spacing_xs"
        android:paddingBottom="@dimen/element_spacing_xs"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:textColor="@color/theme_reverse"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/bluetooth_error_join_wifi" />

    <TextView
        android:id="@+id/grill_network_error_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/gotham_book_normal"
        android:textColor="@color/theme_reverse"
        android:text="@string/bluetooth_error_wifi_body"
        android:textSize="@dimen/text_size_large"
        android:lineHeight="@dimen/text_size_header"
        app:layout_constraintTop_toBottomOf="@id/grill_network_error_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:background="@color/lighter_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grill_network_error_title" />

    <TextView
        android:id="@+id/tips_1_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:fontFamily="@font/gotham_book_bold"
        android:textColor="@color/theme_reverse"
        android:text="@string/pairing_btle_wifi_network_error_tip_1_header"
        android:textSize="@dimen/text_size_normal"
        android:lineHeight="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@id/divider_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tips_1_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/gotham_book_normal"
        android:textColor="@color/dark_grey"
        android:text="@string/pairing_btle_wifi_network_error_tip_1_sub"
        android:textSize="@dimen/text_size_xsmall"
        android:lineHeight="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/tips_1_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/lighter_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tips_1_sub" />

    <TextView
        android:id="@+id/tips_2_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:fontFamily="@font/gotham_book_bold"
        android:textColor="@color/theme_reverse"
        android:text="@string/pairing_btle_wifi_network_error_tip_2_header"
        android:textSize="@dimen/text_size_normal"
        android:lineHeight="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@id/divider_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tips_2_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/gotham_book_normal"
        android:textColor="@color/dark_grey"
        android:text="@string/pairing_btle_wifi_network_error_tip_2_sub"
        android:textSize="@dimen/text_size_xsmall"
        android:lineHeight="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/tips_2_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/lighter_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tips_2_sub" />

    <TextView
        android:id="@+id/tips_3_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:fontFamily="@font/gotham_book_bold"
        android:textColor="@color/theme_reverse"
        android:text="@string/pairing_btle_wifi_network_error_tip_3_header"
        android:textSize="@dimen/text_size_normal"
        android:lineHeight="@dimen/text_size_large"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tips_3_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:fontFamily="@font/gotham_book_normal"
        android:textColor="@color/dark_grey"
        android:text="@string/pairing_btle_wifi_network_error_tip_3_sub"
        android:textSize="@dimen/text_size_xsmall"
        android:lineHeight="@dimen/text_size_normal"
        app:layout_constraintTop_toBottomOf="@id/tips_3_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@color/lighter_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tips_3_sub" />

    <Button
        android:id="@+id/button_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="@string/try_again"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_support" />

    <Button
        android:id="@+id/button_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Ninja.ButtonStyleSecondary"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:text="@string/support_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>