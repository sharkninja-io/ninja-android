<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/stepOneIndicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/verticalDivision"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@drawable/rounded_edges_ninja_green_2dp_radius"/>

    <View
        android:id="@+id/verticalDivision"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/stepTwoIndicator"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/verticalDivision"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/rounded_edges_ninja_green_2dp_radius"/>

    <TextView
        android:id="@+id/stepOfstep"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepOneIndicator"
        android:layout_marginTop="5.3dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:textColor="@color/ninja_green"
        android:text="@string/step_two_of_two"
        android:textSize="12sp"
        android:lineHeight="14.4sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        />
    <TextView
        android:id="@+id/cookingChartText"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="@string/charts_title"
        android:textColor="@color/ninja_green"
        android:textFontWeight="700"
        android:fontFamily="@font/gotham_book_medium"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepOfstep"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="@dimen/margin_large"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cookingChartText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="27.6dp"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:text="@string/charts_placeholder_text"
        android:textColor="@color/black1"
        android:textSize="24sp"
        android:lineHeight="32sp"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginHorizontal="@dimen/margin_large"
        android:text="@string/charts_placeholder_text"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400" />

    <ImageView
        android:id="@+id/chefHat"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@drawable/ic_chef_hat_green"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/chefHat"
        app:layout_constraintBottom_toBottomOf="@+id/chefHat"
        app:layout_constraintLeft_toRightOf="@+id/chefHat"
        android:layout_marginLeft="4dp"
        android:text="@string/charts_preparation"
        android:textColor="@color/ninja_green"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"/>
    <TextView
        android:id="@+id/preparation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/chefHat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:text="@string/charts_placeholder_text"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"/>

    <ImageView
        android:id="@+id/bbqImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preparation"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@drawable/ic_bbq_green"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/bbqImage"
        app:layout_constraintBottom_toBottomOf="@+id/bbqImage"
        app:layout_constraintLeft_toRightOf="@+id/bbqImage"
        android:layout_marginLeft="4dp"
        android:text="@string/charts_grill_temperature"
        android:textColor="@color/ninja_green"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"/>
    <TextView
        android:id="@+id/grillTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bbqImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:text="@string/charts_placeholder_text"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"/>

    <ImageView
        android:id="@+id/timer"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grillTemperature"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@drawable/ic_timer_green"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/timer"
        app:layout_constraintBottom_toBottomOf="@+id/timer"
        app:layout_constraintLeft_toRightOf="@+id/timer"
        android:layout_marginLeft="4dp"
        android:text="@string/cook_time"
        android:textColor="@color/ninja_green"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"/>
    <TextView
        android:id="@+id/cookTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_large"
        android:text="@string/charts_placeholder_text"
        android:layout_marginRight="@dimen/margin_large"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"/>

    <ImageView
        android:id="@+id/notesImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cookTime"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:background="@drawable/ic_notes_green"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/notesImage"
        app:layout_constraintBottom_toBottomOf="@+id/notesImage"
        app:layout_constraintLeft_toRightOf="@+id/notesImage"
        android:layout_marginLeft="4dp"
        android:text="@string/charts_notes"
        android:textColor="@color/ninja_green"
        android:textSize="12sp"
        android:lineHeight="16sp"
        android:fontFamily="@font/gotham_book_bold"
        android:textFontWeight="700"/>
    <TextView
        android:id="@+id/notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/notesImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:text="@string/charts_placeholder_text"
        android:textColor="@color/black1"
        android:textSize="16sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"/>
    
    <Button
        android:id="@+id/startCookingButton"
        style="@style/Ninja.ButtonStyle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edges_ninja_green"
        android:text="@string/start_cooking_button_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="44dp"
        android:layout_marginHorizontal="@dimen/margin_large"/>

</androidx.constraintlayout.widget.ConstraintLayout>