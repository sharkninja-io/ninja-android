<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_edges_white_background">

    <TextView
        android:id="@+id/plug_in_grill_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:text="@string/plug_in_grill_text"
        android:textColor="@color/black1"
        android:textSize="16dp"
        android:textFontWeight="500"
        android:fontFamily="@font/gotham_book_medium"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/GFCI_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/plug_in_grill_text"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:text="@string/gfci_text"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textSize="24dp"
        android:textColor="@color/black1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/extension_cord_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/GFCI_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gotham_book_medium"
        android:textSize="16sp"
        android:textColor="@color/darkest_grey"
        android:text="@string/ext_cord_text" />

    <View
        android:id="@+id/blob_one"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintLeft_toLeftOf="@id/extension_cord_text"
        app:layout_constraintTop_toBottomOf="@id/extension_cord_text"
        android:layout_marginTop="23dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/green_blob" />

    <TextView
        android:id="@+id/cord_dimensions_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/extension_cord_text"
        app:layout_constraintLeft_toRightOf="@+id/blob_one"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="16dp"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/gotham_book_medium"
        android:textColor="@color/darkest_grey"
        android:textSize="16dp"
        android:textFontWeight="400"
        android:text="@string/cord_dimen_text" />

    <View
        android:id="@+id/blob_two"
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:layout_constraintLeft_toLeftOf="@id/extension_cord_text"
        app:layout_constraintTop_toBottomOf="@id/cord_dimensions_text"
        android:layout_marginTop="23dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/green_blob" />

    <TextView
        android:id="@+id/outdoor_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cord_dimensions_text"
        app:layout_constraintLeft_toRightOf="@+id/blob_two"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_marginTop="16dp"
        android:layout_marginStart="11dp"
        android:fontFamily="@font/gotham_book_medium"
        android:textColor="@color/darkest_grey"
        android:textSize="16dp"
        android:textFontWeight="400"
        android:text="@string/outdoor_text" />

    <View
        android:id="@+id/plug_image"
        android:layout_width="342dp"
        android:layout_height="160dp"
        android:background="@drawable/ic_plug_states"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outdoor_text"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/got_it_button"
        android:layout_width="206dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/plug_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:background="@drawable/got_it_button_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/got_it_button"
        app:layout_constraintBottom_toBottomOf="@id/got_it_button"
        app:layout_constraintLeft_toLeftOf="@id/got_it_button"
        app:layout_constraintRight_toRightOf="@id/got_it_button"
        android:paddingBottom="4dp"
        android:text="@string/got_it"
        android:fontFamily="@font/gotham_book_medium"
        android:textFontWeight="400"
        android:textAlignment="center"
        android:lineHeight="48dp"
        android:textColor="@color/white_8F"
        android:textSize="16dp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/got_it_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>