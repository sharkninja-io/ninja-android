<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center"
        android:top="12dp"
        android:width="60dp"
        android:height="55dp">
        <shape
            android:shape="oval">
        <stroke
            android:width="1dp"
            android:color="@color/grey3"/>

            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <item
        android:gravity="bottom|center"
        android:height="41dp">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/white_6F"/>
        </shape>
    </item>

    <item
        android:gravity="center|bottom"
        android:width="48dp"
        android:height="48dp">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="24dp" />

            <solid android:color="@color/ninja_green"/>
        </shape>
    </item>
</layer-list>